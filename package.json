{
  "name": "lang-text",
  "version": "0.1.0",
  "description": "Simple/Safe/Strong i18n nodejs module",
  "private": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "pretest": "npm run clean && npm run tsc",
    "test": "ava --no-cache --verbose lib/**/*.test.js",
    "posttest": "npm run clean-test-code",
    "tsc": "tsc",
    "tscw": "tsc -w",
    "preversion": "npm run tsc",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run tsc && npm run clean-test-code",
    "clean": "rimraf ./lib",
    "clean-test-code": "rimraf ./lib/**/*.test.js && rimraf ./lib/**/*.test.d.ts"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mitica/lang-text.git"
  },
  "keywords": [
    "i18n",
    "lang-text"
  ],
  "author": "Dumitru Cantea",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mitica/lang-text/issues"
  },
  "homepage": "https://github.com/Mitica/lang-text#readme",
  "devDependencies": {
    "@types/node": "10.12.9",
    "@types/sprintf-js": "^1.1.1",
    "ava": "^0.25.0",
    "rimraf": "^2.6.2",
    "typescript": "3.1.6"
  },
  "dependencies": {
    "sprintf-js": "^1.1.1",
    "sprintf-ts": "^0.1.0"
  }
}
